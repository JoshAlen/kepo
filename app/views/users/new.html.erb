
<a style= "z-index: 1000;" id= "signuplah" type="button" class="btn btn-info btn-sm" data-toggle="modal" data-target="#mySignup"></a>

  <div class="container" style="z-index: 500;">
    <!-- Trigger the modal with a button -->
            <!-- Modal -->
    <div class="modal" id="mySignup" role="dialog">
    <div class="modal-dialog modal-md">
      <div class="modal-content" style="background-color: #ececec;">
        <div class="modal-header">
          <a class="pull-right" href="/" style="font-size: 24px">&times;</a>
          <h4 class="modal-title">WELCOME, NEW KEPOCHI</h4>
        </div>
        <div class="modal-body">
                  <h2><%= t(".title") %></h2>
                    <%= form_for @user do |form| %>
                    <%= render partial: '/users/form', object: form %>
                    <br>
                    <div class="submit-field">
                      <%= form.submit %>
                    </div>

                  <% end %>
        </div>
        <div class="modal-footer">
            <div class="other-links">
                <%= link_to t(".sign_in"), sign_in_path %>
            </div>
        </div>
      </div>
    </div>
    </div>
  </div>

  <script type="text/javascript">

    var runthis = function(){
      document.getElementById('signuplah').click();
    };
    runthis();

  </script>



